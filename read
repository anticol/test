javascript:(function(){const selector=".button.action-button";const t=prompt("Enter time in CET (HH:MM)");if(t){const [h,m]=t.split(":").map(x=>parseInt(x,10));alert("Auto-click scheduled for "+h.toString().padStart(2,"0")+":"+m.toString().padStart(2,"0")+" CET");function clickButton(){const btn=document.querySelector(selector);if(btn){btn.scrollIntoView({behavior:"smooth",block:"center"});btn.focus();btn.click();console.log("Button clicked at "+new Date().toLocaleTimeString())}else{console.log("Button not found at "+new Date().toLocaleTimeString())}}function waitForTarget(){const now=new Date();const target=new Date();target.setHours(h,m,0,0);const waitMs=target-now;setTimeout(clickButton,waitMs>0?waitMs:0)}waitForTarget();}})();
