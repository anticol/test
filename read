javascript:(function(){const selector=".button.info-button";const intervalMs=10000;function clickButton(){const btn=document.querySelector(selector);if(btn){btn.scrollIntoView({behavior:"smooth",block:"center"});btn.focus();btn.click();console.log("Clicked at "+new Date().toLocaleTimeString())}else{console.log("Button not found at "+new Date().toLocaleTimeString())}}function waitForTarget(){const now=new Date();const target=new Date();target.setHours(1,0,0,0);const offset=(60*60*1000);const localOffset=target.getTime()-(now.getTime()-offset);const waitMs=localOffset>0?localOffset:0;console.log("Waiting ms:",waitMs);setTimeout(()=>{alert("Auto-clicker started!");clickButton();setInterval(clickButton,intervalMs)},waitMs)}waitForTarget();})();
